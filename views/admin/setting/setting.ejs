<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRO SETTINGS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="bg-light">
    <header>
        <%- include('../../adminHeader'); %>
    </header>
    
    <section class="show">
        <table class="table table-hover table-dark bg-dark mb-3">
            <thead>
            <tr>
            <th>Name</th>
            <th>Team</th>
            <th>Mouse</th>
            <th>Hertz</th>
            <th>Dpi</th>
            <th>Sensitivity</th>
            <th>Edpi</th>
            <th>Ads</th>
            <th>Monitor</th>
            <th>Refresh</th>
            <th>Gpu</th>
            <th>Resolution</th>
            <th>Mousepad</th>
            <th>Keyboard</th>
            <th>Headset</th>
            
        </tr>
    </thead>
            <h1>PRO SETTINGS</h1>
        <% settings.forEach(function(setting){ %>
            <tbody>
            <tr class="table-danger"> 
            <td> <h6><%= setting.name %></h6> </td>    
            <td> <h6><%= setting.team %></h6> </td> 
            <td> <h6><%= setting.mouse %></h6> </td> 
            <td> <h6><%= setting.hz %></h6> </td> 
            <td> <h6><%= setting.dpi %></h6> </td> 
            <td> <h6><%= setting.sensitivity %></h6> </td> 
            <td> <h6><%= setting.edpi %></h6> </td> 
            <td> <h6><%= setting.ads %></h6> </td> 
            <td> <h6><%= setting.monitor %></h6> </td> 
            <td> <h6><%= setting.refresh %></h6> </td> 
            <td> <h6><%= setting.gpu %></h6> </td> 
            <td> <h6><%= setting.resolution %></h6> </td> 
            <td> <h6><%= setting.mousepad %></h6> </td> 
            <td> <h6><%= setting.keyboard %></h6> </td> 
            <td> <h6><%= setting.headset %></h6> </td> 
           
            
            <td><a class="btn btn-warning" href="/<%=setting._id%>/edit">EDIT </a></td>
            <td><form action="/<%=setting._id%>/?_method=DELETE" method="POST"><button class="btn btn-danger">Delete</button></form></td>
            </tr>
        </tbody>
        <% }) %>
    </table>
    </section>
    <br>
    <br>
    <hr>
    <section class="add">
        <form action="/add" method="POST">
            
           <center>
            <div class="card border-warning bg-dark mb-3" style="max-width: 20rem;">
                <br> <br>
                <span style="color:goldenrod"><h4><strong>ADD NEW SETTING</strong></h4></span>
                <div class="card-body">    
                  <label for="name">NAME:</label><br>
            <input class="border-warning"  type="text" id="name" name="name" placeholder="PLAYER NAME">
            <br>
            <br>
            <label for="team">TEAM:</label><br>
            <input class="border-warning" type="text" id="team" name="team" placeholder="TEAM NAME"><br>
            <br>
            <label for="mouse">MOUSE</label><br>
            <input class="border-warning" type="text" id="mouse" name="mouse" placeholder="MOUSE"><br>
            <br>
            <label for="hz">MOUSE-HZ:</label><br>
            <input class="border-warning" type="text" id="hz" name="hz" placeholder="MOUSE HERTZ"><br>
            <br>
            <label for="dpi">DPI:</label><br>
            <input class="border-warning" type="text" id="dpi" name="dpi" placeholder="MOUSE DPI"><br>
            <br>
            <label for="sensitivity">SENSITIVITY:</label><br>
            <input class="border-warning" type="text" id="sensitivity" name="sensitivity" placeholder="SENSITIVITY"><br>
            <br>
            <label for="edpi">EDPI:</label><br>
            <input class="border-warning" type="text" id="edpi" name="edpi" placeholder="EDPI"><br>
            <br>
            <label for="ads">ADS:</label><br>
            <input class="border-warning" type="text" id="ads" name="ads" placeholder="SCOPED SENSITIVITY"><br>
            <br>
            <label for="monitor">MONITOR:</label><br>
            <input class="border-warning" type="text" id="monitor" name="monitor" placeholder="MONITOR"><br>
            <br>
            <label for="refresh">REFRESH-RATE:</label><br>
            <input class="border-warning" type="text" id="refresh" name="refresh" placeholder="REFRESH RATE"><br>
            <br>
            <label for="gpu">GPU:</label><br>
            <input class="border-warning" type="text" id="gpu" name="gpu" placeholder="GPU"><br>
            <br>
            <label for="resolution">RESOLUTION:</label><br>
            <input class="border-warning" type="text" id="resolution" name="resolution" placeholder="RESOLUTION"><br>
            <br>
            <label for="mousepad">MOUSEPAD:</label><br>
            <input class="border-warning" type="text" id="mousepad" name="mousepad" placeholder="MOUSEPAD"><br>
            <br>
            <label for="keyboard">KEYBOARD:</label><br>
            <input class="border-warning" type="text" id="keyboard" name="keyboard" placeholder="KEYBOARD"><br>
            <br>
            <label for="headset">HEADSET</label><br>
            <input class="border-warning" type="text" id="headset" name="headset" placeholder="HEADSET"><br><br>
            <br>
            <input type="SUBMIT" class="btn btn-warning"><br>
            <br> <br>
                </div>
              </div>
            </center>
        </form>
    </section>
    
   
</body>
</html>